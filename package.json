    "appveyor-build": "electron-builder build --win --publish onTagOrDraft"
  },
  "bugs": {
    "url": "https://github.com/WaddleOn/client/issues"
  },
  "homepage": "https://github.com/WaddleOn/client#readme",
  "repository": "https://github.com/WaddleOn/client",
  "author": "Floogal",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^6.1.2",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.1.0"
  },
  "dependencies": {
    "discord-rpc": "^3.1.4",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.2.0"
  },
  "build": {
    "appId": "fun.waddleon.client",
    "productName": "Waddle On Client",
